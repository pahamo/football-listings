# Netlify cache headers to prevent JavaScript caching issues

# Favicon files - force refresh to fix Google Search results
/favicon.ico
  Cache-Control: no-cache, no-store, must-revalidate

/favicon*.png
  Cache-Control: no-cache, no-store, must-revalidate

/apple-touch-icon.png
  Cache-Control: no-cache, no-store, must-revalidate

/logo.svg
  Cache-Control: no-cache, no-store, must-revalidate

# JavaScript and CSS files - short cache (1 hour) since they have content hashes
/static/js/*
  Cache-Control: public, max-age=3600, must-revalidate

/static/css/*
  Cache-Control: public, max-age=3600, must-revalidate

# HTML files - NO CACHE to ensure fresh content
/*
  Cache-Control: no-cache, no-store, must-revalidate

# Service worker - immediate update for routing fixes
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate

# Ensure all fixture routes are handled by React
/fixtures/*
  Cache-Control: public, max-age=0, must-revalidate