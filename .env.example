# LOCAL DEVELOPMENT ONLY - Frontend variables
REACT_APP_SUPABASE_URL=your_supabase_project_url_here
REACT_APP_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# LOCAL DEVELOPMENT ONLY - Server-side script variables
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# LOCAL DEVELOPMENT ONLY - Football-Data.org API Key
# Get your free key at: https://www.football-data.org/client/register
FOOTBALL_DATA_TOKEN=your_football_data_api_token_here

# LOCAL DEVELOPMENT ONLY - Database configuration
COMP_ID_DB=1
COMP_ID_API=2021
SEASON=2025

# LOCAL DEVELOPMENT ONLY - SoccersAPI configuration (DEPRECATED - use Sports Monks)
SOCCERSAPI_KEY=your_soccersapi_key_here
SOCCERSAPI_USERNAME=your_email_address_here

# LOCAL DEVELOPMENT ONLY - Sports Monks API (ACTIVE - Primary data source)
# Get your API token at: https://www.sportmonks.com/
# Tier: Standard (Europe) + UCL/Europa/Conference
# Rate Limit: 3000 requests/hour
SPORTMONKS_TOKEN=your_sportmonks_api_token_here
REACT_APP_SPORTMONKS_TOKEN=your_sportmonks_api_token_here

# ============================================================================
# FEATURE FLAGS - Sports Monks API Integration
# ============================================================================
# Control gradual rollout of Sports Monks features
# Set to 'true' to enable, 'false' to disable (default: false)

# Master Switches
REACT_APP_FF_USE_SPORTMONKS=false              # Enable Sports Monks API
REACT_APP_FF_SPORTMONKS_TEST_MODE=false        # Test mode: log only, don't modify database

# Sync Configuration
REACT_APP_FF_SPORTMONKS_ENABLE_SYNC=false      # Enable automatic data sync
REACT_APP_FF_SPORTMONKS_SYNC_COMPETITIONS=     # Comma-separated competition IDs (empty = all)
                                                # Example: 1,2,3 (Premier League, Champions League, FA Cup)
                                                # Competition IDs: 1=PL, 2=UCL, 3=FA Cup, 4=EFL Cup,
                                                #                  5=Europa, 6=Conference, 7=Scottish, 8=Championship

# Feature Toggles
REACT_APP_FF_SPORTMONKS_TV_STATIONS=false      # Show TV broadcast data from Sports Monks
REACT_APP_FF_SPORTMONKS_LIVE_SCORES=false      # Show live match scores
REACT_APP_FF_SPORTMONKS_LINEUPS=false          # Show team lineups
REACT_APP_FF_SPORTMONKS_MATCH_STATS=false      # Show match statistics
REACT_APP_FF_SPORTMONKS_H2H_DATA=false         # Show enhanced head-to-head data

