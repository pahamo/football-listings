{
  "name": "pl_tv_mvp_spa",
  "version": "1.0.0",
  "description": "Premier League TV listings MVP",
  "type": "module",
  "scripts": {
    "dev": "http-server -p 5173 -c-1 . --cors",
    "dev:kill": "sh -c 'kill -9 $(lsof -ti :5173) 2>/dev/null || true'",
    "dev:restart": "npm run dev:kill && npm run dev",
    "build:seo": "node scripts/build-seo.js",
    "version": "node scripts/version-manager.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.0"
  },
  "devDependencies": {
    "http-server": "^14.1.1",
    "netlify-cli": "^17.0.0"
  }
}